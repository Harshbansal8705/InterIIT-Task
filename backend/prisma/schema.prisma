generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Godown {
  id          String   @id
  name        String
  parentId    String?
  parent      Godown?  @relation("SubGodown", fields: [parentId], references: [id])
  subGodowns  Godown[] @relation("SubGodown")
  items       Item[]
}

model Item {
  id          String   @id
  name        String
  quantity    Int      @default(0)
  price       Float
  category    String
  inStock     Boolean
  godownId    String
  brand       String
  attributes  Json?
  imageUrl    String
  godown      Godown   @relation(fields: [godownId], references: [id])
}